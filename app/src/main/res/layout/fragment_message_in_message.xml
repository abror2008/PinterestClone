<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MessageInMessageFragment">


    <TextView
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Делитесь идеями \n c друзями"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout

        android:layout_marginTop="5dp"

        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/search"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <EditText
            android:textSize="15dp"
            android:hint="Поиск по имени или эл.\n адресу"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="56dp"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/circles"
                android:background="#D8D8D8"
                android:layout_height="56dp"/>
            <TextView

                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="С"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Синхр.контакты"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>